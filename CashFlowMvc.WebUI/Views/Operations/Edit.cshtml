@model CashFlowMvc.Application.DTOs.OperationDTO

@{
    ViewData["Title"] = "Update Operation";
}

<h2>@ViewData["Title"]</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div class="form-group">
                <label asp-for="Description" class="control-label">Descripition</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Value" class="col-md-2 control-label">Value</label>
                <div class="col-md-10">
                    <input asp-for="Value" class="form-control" />
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="PaymentMethodId" class="control-label">Direction Id</label>
                <div class="col-md-10">
                    <select asp-for="PaymentMethodId" class="form-control" asp-items="ViewBag.PaymentMethodId"> </select>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

@model CashFlowMvc.Application.DTOs.OperationDTO

@{
    ViewData["Title"] = "Register Operation";
}

<h2>@ViewData["Title"]</h2>


<form asp-action="Create" method="post">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label">Description</label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Value" class="col-md-2 control-label">Value</label>
            <div class="col-md-10">
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PaymentMethodId" class="col-md-2 control-label">Payment Method</label>
            <div class="col-md-10">
                <select asp-for="PaymentMethodId" class="form-control" asp-items="ViewBag.PaymentMethodId"> </select>
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </div>

    </div>
</form>
